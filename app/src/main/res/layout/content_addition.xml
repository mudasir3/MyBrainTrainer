<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blur"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Addition"
    tools:showIn="@layout/activity_addition">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timer"
        android:id="@+id/timer"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:id="@+id/levelview"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12+7=?"
        android:id="@+id/question"
        android:fontFamily="@string/title_activity_addition"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:layout_marginLeft="50dp"
        android:textColor="#fb0606"
        android:layout_below="@+id/timer"
        android:textStyle="bold|normal|italic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score = "
        android:textSize="25dp"
        android:textStyle="italic"
        android:id="@+id/score"
        android:layout_below="@id/levelview"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:background="@drawable/layoutback"
        >
            <Button
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:text="5"
            android:id="@+id/option1"
            android:onClick="option1click"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
            android:textColor="#080cf4"
                android:layout_alignParentLeft="true"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textStyle="bold|normal|italic"
            android:background="@drawable/blur"
            android:layout_weight="3.30" />


        <Button
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:text="10"
            android:layout_alignParentRight="true"
            android:id="@+id/option2"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:onClick="option2click"
            android:background="@drawable/blur"
            android:textColor="#de0dc9"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textStyle="bold|normal|italic" />


        <Button
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:typeface="serif"
            android:text="6"
            android:onClick="option3click"
            android:id="@+id/option3"
            android:layout_marginTop="5dp"
            android:textStyle="bold|normal|italic"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textColor="#fb0303"
            android:layout_marginLeft="20dp"
            android:singleLine="false"
            android:layout_below="@+id/option1"
            android:layout_alignParentLeft="true"
            android:background="@drawable/blur" />

        <Button
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:text="7"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/option2"
            android:layout_alignParentRight="true"
            android:id="@+id/option4"
            android:layout_marginTop="5dp"
            android:onClick="option4click"
            android:textStyle="bold|normal|italic"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textColor="#080500"
            android:background="@drawable/blur" />
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageviewanswer"
            android:layout_below="@id/option3"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>


</RelativeLayout>





